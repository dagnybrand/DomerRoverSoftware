import time, keyboard

while True:
    if (keyboard.is_pressed("w")):
        print("forward")
        time.sleep(0.1)
    elif (keyboard.is_pressed("a")):
        print("turn left")
        time.sleep(0.1)
    elif (keyboard.is_pressed("s")):
        print("backward")
        time.sleep(0.1)
    elif (keyboard.is_pressed("d")):
        print('turn right')
        time.sleep(0.1)
