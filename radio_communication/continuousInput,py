# Takes in keyboard inputs as long as the button is pressed - not just when released

import keyboard
from pi_to_arduino import Arduino

arduino = Arduino()

while True:
    if (keyboard.is_pressed("w")):
        arduino.send_signal(b"w")
    elif (keyboard.is_pressed("a")):
        arduino.send_signal(b"a")
    elif (keyboard.is_pressed("s")):
        arduino.send_signal(b"s")
    elif (keyboard.is_pressed("d")):
        arduino.send_signal(b"d")
